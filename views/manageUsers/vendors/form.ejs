<div class="form-group row">
    <div class="col-6">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" placeholder="First Name" autocomplete="off">
    </div>
    <div class="col-6">
        <label>Last Name</label>
        <input type="text" name="last_name" class="form-control" placeholder="Last Name" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label>Email</label>
        <input type="email" name="email" class="form-control" parsley-trigger="change" placeholder="Email" autocomplete="off">
    </div>
    <div class="col-4">
        <label>Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password" autocomplete="off">
    </div>
    <div class="col-4">
        <label>Confirm Password</label>
        <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label>Mobile</label>
        <input type="text" name="mobile_no" class="form-control" placeholder="Mobile" autocomplete="off">
    </div>
    <div class="col-4">
        <label>Gender</label>
        <select name="gender" class="form-control" autocomplete="off">
            <option value="">Select</option>
            <option value="Male" <%= typeof user != 'undefined' && user.gender == 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= typeof user != 'undefined' && user.gender == 'Female' ? 'selected' : '' %>>Female</option>
            <option value="Other" <%= typeof user != 'undefined' && user.gender == 'Female' ? 'Other' : '' %>>Other</option>
        </select>
    </div>
    <div class="col-4">
        <label>Date of Birth</label>
        <input type="text" name="dob" class="form-control"  placeholder="Date of Birth" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label>Country</label>
        <select name="country" class="countries form-control" id="countryId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
    <div class="col-4">
        <label>State</label>
        <select name="state" class="states form-control" id="stateId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
    <div class="col-4">
        <label>City</label>
        <select name="city" class="cities form-control" id="cityId" autocomplete="off">
            <option value="">Select</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <div class="col-9">
        <label>Address</label>
        <input type="text" name="address" class="form-control" placeholder="Address" autocomplete="off">
    </div>
    <div class="col-3">
        <label>Pin Code</label>
        <input type="text" name="pin_code" class="form-control"  placeholder="Pin Code" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Landmark</label>
        <input type="text" name="landmark" class="form-control"  placeholder="Landmark" autocomplete="off">
    </div>
</div>
<div class="form-group row dragDrop">
    <div class="col-12">
        <label>Image</label>
        <div class="row m-0">
            <div class="dropzone-wrapper col-8">
                <div class="dropzone-desc">
                <i class="fa fa-cloud-upload"></i>
                <p>Choose an image file or drag it here.</p>
                </div>
                <input type="file" name="image" class="dropzone">
            </div>
            <div class="preview-zone hidden col-4">
                <div class="box box-solid">
                    <div class="position-absolute" style="right: 0;">
                        <button style="display: none;" type="button" class="btn btn-danger btn-xs remove-preview">
                            <i class="fa fa-times"></i> Remove
                        </button>
                    </div>
                <div class="box-body"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-12 mt-2">
        <label>Status</label>
        <input type="checkbox" name="status" data-plugin="switchery" data-color="#1bb99a" <%= typeof vendor != 'undefined' && vendor.status == '1' ? 'checked' : typeof user == 'undefined' ? 'checked' : '' %>>
    </div>
</div>
<h4 class="m-t-0 m-b-30 header-title">Add Vendor Business Details</h4>
<div class="form-group row">
    <div class="col-6">
        <label>Business Name</label>
        <input type="text" name="business_name" class="form-control" placeholder="Business Name" autocomplete="off">
    </div>
    <div class="col-6">
        <label>Aletrnate Mobile</label>
        <input type="text" name="alternate_mobile_number" class="form-control" placeholder="Aletrnate Mobile" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-6">
        <label>Category</label>
        <select name="category_id" class="form-control" autocomplete="off">
            <option value="">Select</option>

            <% categories.forEach((value, key) => { %>

                <option value="<%= value.id %>"><%= value.title %></option>

            <% }); %>

        </select>
    </div>
    <div class="col-6">
        <label>Location</label>
        <input type="text" name="location" class="form-control" placeholder="Location" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Description</label>
        <input type="text" name="description" class="form-control" placeholder="Enter Somthing About Your Business" autocomplete="off">
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Do you have visiting card ?</label>
        <input type="checkbox" checked data-plugin="switchery" data-color="#1bb99a">
    </div>
</div>
<div class="form-group row">
    <div class="col-2">
        <label>Upload Visiting Card</label>
        <input type="file" class="filestyle" data-input="false" data-buttonname="btn-secondary">
    </div>    
    <div class="col-3">
        <label>Upload Award & Certifications</label>
        <input type="file" class="filestyle" data-input="false" data-buttonname="btn-secondary">
    </div>    
</div>
<button type="submit" class="btn btn-custom waves-effect waves-light">Submit</button>