<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Categories</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="#">Category</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="m-t-0 m-b-30 header-title">Add Category</h4>
                    <form role="form">
                        <div class="form-group row">
                            <div class="col-6">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" placeholder="Title">
                            </div>
                        </div>                       
                        <div class="form-group row">
                            <div class="col-12">
                                <label for="exampleInputStatus">Status</label>
                                <input type="checkbox" checked data-plugin="switchery" data-color="#1bb99a"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-custom waves-effect waves-light">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>


