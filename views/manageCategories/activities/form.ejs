<div class="form-group row">
    <div class="col-6">
        <label for="exampleInputTitle">Title</label>
        <input type="text" class="form-control" name="title" value="<%= typeof data != 'undefined' ? data.title : '' %>" id="exampleInputTitle" placeholder="Title" autocomplete="off">
    </div>
    <div class="col-6">
        <label>Category</label>
        <select name="category_id" class="form-control" autocomplete="off">
            <option value="">Select</option>

            <% categories.forEach((value, key) => { %>

                <option value="<%= value.id %>" <%= typeof data != 'undefined' && data.category_id == value.id ? 'selected' : '' %> ><%= value.title %></option>

            <% }); %>

        </select>
    </div>
</div>                       
<div class="form-group row">
    <div class="col-12">
        <label for="exampleInputStatus">Status</label>
        <input type="checkbox" name="status" value="1" data-plugin="switchery" data-color="#1bb99a" <%= typeof data != 'undefined' && data.status == '1' ? 'checked' : typeof data == 'undefined' ? 'checked' : '' %>>
    </div>
</div>
<button type="submit" class="btn btn-custom waves-effect waves-light">Submit</button>