<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title float-left">Manage Categories</h4>
                    <ol class="breadcrumb float-right">
                        <li class="breadcrumb-item"><a href="#">Activities</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-box table-responsive">
                    <div class="col-12 px-3 mb-3 d-flex justify-content-between align-items-center">
                        <h4 class="m-t-0 header-title"><b>Activities</b></h4>
                        <a href="/admin/activities/create"><button type="button"
                                class="btn btn-custom waves-light waves-effect w-md">Add Activity</button></a>
                    </div>
                    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                        width="100%">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% activities.forEach((value, key) => { %>

                                <tr>
                                    <td><%= value.title %></td>
                                    <td><%= value.category.title %></td>
                                    <td>
                                        <input type="checkbox" class="sa-status" data-plugin="switchery" data-color="#1bb99a" data-id="<%= value.id %>" value="<%= value.status %>"  <%= (value.status == '1') ? 'checked' : '' %> />
                                        <form id="status-form-<%= value.id %>" action="/admin/activities/update_status/<%= value.id %>" method="post" style="display: none;" >
                                            <input class="status-value-<%= value.id %>" type="hidden" name="status" value="<%= value.status %>">
                                        </form>
                                    </td>    
                                    <td class="text-center">
                                        <a href="#" class="hidden on-editing save-row pr-2 text-info" data-toggle="tooltip"
                                            data-placement="top" title="" data-original-title="View"><i
                                                class="fa fa-eye"></i></a>
                                        <a href="/admin/activities/edit/<%= value.id %>" class="on-default edit-row pr-1 text-primary" data-toggle="tooltip"
                                            data-placement="top" title="" data-original-title="Edit"><i
                                                class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
    
                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>